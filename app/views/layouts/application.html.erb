<!DOCTYPE html>
<html>
<head>
  <title>Trial</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

  <body>

    <div class="page">
      <div class="header">
        <h1 id="logo"><%= link_to 'Maktabty', root_url ,:class => 'logo' %></h1> 
          <% if current_user %> 
            <ul> 
                 <li >Logged in as <%= current_user.email %></li>
                <li> <%= link_to "Book Shelf", books_page_path %>  </li>

                 <li ><%= link_to "Log out", log_out_path %></li>

            <ul>
            <% else %> 
            <ul> 
               <li ><%= link_to "Sign up", sign_up_path %></li>
               <li ><%= link_to "Log in", log_in_path %></li>
            </ul>
        <% end %>   
      </div>

      <div class="body">
          <% flash.each do |name, msg| %>  
          <div class="notice">
             <%= content_tag :div, msg, :id => "flash#{name}" %> 
          </div> 
          <% end %>
          <%= yield %>
      </div>

      <div class="footer">
                
        <p>&#169; Copyright &#169; 2012. Maktabty ...</p>
      </div>
    </div>




 
     
  


</body>
</html>
